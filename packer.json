{
  "variables": {
    "output_dir": "packer_output"
  },
  "provisioners": [
    {
      "type": "shell-local",
      "environment_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_SSH_ARGS='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o PreferredAuthentications=password -o PubkeyAuthentication=no'",
        "ANSIBLE_NOCOLOR=True"
      ],
      "inline": [
        "ansible-playbook --extra-vars 'packer_build_name=virtualbox-iso packer_builder_type=virtualbox-iso' -i $(pwd)/inventory $(pwd)/install.yml"
      ],
      "pause_before": "10s"
    },
    {
      "type": "shell-local",
      "environment_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_SSH_ARGS='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'",
        "ANSIBLE_NOCOLOR=True"
      ],
      "inline": [
        "ansible-playbook --extra-vars 'packer_build_name=virtualbox-iso packer_builder_type=virtualbox-iso' -i $(pwd)/inventory --key-file ~/.ssh/id_rsa_Packer $(pwd)/postinstall.yml"
      ],
      "pause_before": "300s"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "output_directory": "{{ user `output_dir` }}",
      "boot_command": [
        "passwd root<enter><wait5>root-password<enter><wait5>root-password<enter><wait5>",
        "<enter><wait5>",
        "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config",
        "<enter><wait5>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
        "<enter><wait5>",
        "/etc/init.d/sshd start",
        "<enter><wait5>"
      ],
      "boot_wait": "120s",
      "disk_size": 65536,
      "guest_os_type": "Gentoo_64",
      "headless": true,
      "iso_urls": [ "https://bouncer.gentoo.org/fetch/root/all/releases/amd64/autobuilds/20200322T214504Z/install-amd64-minimal-20200322T214504Z.iso" ],
      "iso_checksum_type": "sha512",
      "iso_checksum": "3e5840b1222ab41c07171f8e14e1667181e3e8f3cc2a26d3818fd3bc6c50d924fbbadf367dcfad59a9d59bc14760fd51353c6d070d87532c144f36f01f2c2a7c",
      "shutdown_command": "shutdown -hP now",
      "communicator": "ssh",
      "ssh_port": 22,
      "host_port_min": 6666,
      "host_port_max": 6666,
      "ssh_username": "root",
      "ssh_password": "root-password",
      "ssh_agent_auth": false,
      "ssh_wait_timeout": "10000s",
      "vm_name": "install-gentoo",
      "iso_interface": "sata",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "8192"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--firmware", "EFI"],
        ["modifyvm", "{{.Name}}", "--vram", "128"]
      ]
    }
  ],
  "post-processors": [
    {
      "output": "vagrant_output/{{.Provider}}-gentoo.box",
      "type": "vagrant"
    }
  ]
}